@model PruebaGym2.Models.Ejercicio

@{
    ViewData["Title"] = "Create";
    var tipoMaquinaItems = new List<SelectListItem>
    {
        new SelectListItem { Text = "No lleva maquina", Value = "" }
    };

    if (ViewBag.TipoMaquinaId != null)
    {
        tipoMaquinaItems.AddRange((IEnumerable<SelectListItem>)ViewBag.TipoMaquinaId);
    }
}

<h1>Crear nuevo registro</h1>

<h4>Ejercicio</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombreEjercicio" class="control-label"></label>
                <input asp-for="NombreEjercicio" class="form-control" />
                <span asp-validation-for="NombreEjercicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescripcionEjercicio" class="control-label"></label>
                <input asp-for="DescripcionEjercicio" class="form-control" />
                <span asp-validation-for="DescripcionEjercicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoMaquinaId" class="control-label"></label>
                @Html.DropDownList("TipoMaquinaId", ViewData["TipoMaquinaId"] as SelectList, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
