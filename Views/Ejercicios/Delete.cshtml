@model PruebaGym2.Models.Ejercicio

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>¿Estás seguro que quieres elimianar este registro?</h3>
<div>
    <h4>Ejercicio</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NombreEjercicio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreEjercicio)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DescripcionEjercicio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DescripcionEjercicio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TipoMaquinaId)
        </dt>
        <dd class="col-sm-10">
            @if (Model.TipoMaquina != null)
            {
                @Html.DisplayFor(model => model.TipoMaquina.NombreTipo)
            }
            else
            {
                <span>No lleva máquina</span>
            }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdEjercicio" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Volver</a>
    </form>
</div>
