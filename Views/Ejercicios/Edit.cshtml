@model PruebaGym2.Models.Ejercicio

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Ejercicio</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdEjercicio" />
            <div class="form-group">
                <label asp-for="NombreEjercicio" class="control-label"></label>
                <input asp-for="NombreEjercicio" class="form-control" />
                <span asp-validation-for="NombreEjercicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescripcionEjercicio" class="control-label"></label>
                <input asp-for="DescripcionEjercicio" class="form-control" />
                <span asp-validation-for="DescripcionEjercicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoMaquinaId" class="control-label"></label>
                <select asp-for="TipoMaquinaId" class="form-control" asp-items="ViewBag.TipoMaquinaId"></select>
                <span asp-validation-for="TipoMaquinaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
