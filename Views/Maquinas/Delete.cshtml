@model PruebaGym2.Models.Maquina

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>¿Estás seguro que quieres elimianar este registro?</h3>
<div>
    <h4>Maquina</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaCompra)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaCompra)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PrecioCompra)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PrecioCompra)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VidaUtil)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VidaUtil)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Disponible)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Disponible)
            {
                <text>Disponible</text>
            }
            else
            {
                <text>No disponible</text>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Local)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Local.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdTipoMaquina)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TipoMaquina.NombreTipo)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdMaquina" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Volver</a>
    </form>
</div>
