@model PruebaGym2.Models.RutinaEjercicio

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar Registro</h1>

<h3>¿Estás seguro que quieres elimianar este registro?</h3>
<div>
    <h4>RutinaEjercicio</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rutina)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rutina.Descripcion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ejercicio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ejercicio.DescripcionEjercicio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sets)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sets)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Repeticiones)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Repeticiones)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdRutina" />
        <input type="hidden" asp-for="IdEjercicio" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Volver</a>
    </form>
</div>
