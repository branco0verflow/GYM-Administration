@model PruebaGym2.Models.Rutina

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Rutina</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="IdRutina" />
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoRutina" class="control-label"></label>
                <select asp-for="TipoRutina" class="form-control">
                    <option value="">Seleccione un tipo</option>
                    <option value="Salud">Salud</option>
                    <option value="Competicion Amateur">Competicion Amateur</option>
                    <option value="Competicion Profesional">Competicion Profesional</option>
                </select>
                <span asp-validation-for="TipoRutina" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</div>
