@model PruebaGym2.Models.Socio

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Socio</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="IdSocio" />
            <div class="form-group">
                <label asp-for="NombreSocio" class="control-label"></label>
                <input asp-for="NombreSocio" class="form-control" />
                <span asp-validation-for="NombreSocio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoSocio" class="control-label"></label>
                <select asp-for="TipoSocio" class="form-control">
                    <option value="">Seleccione un tipo</option>
                    <option value="Estándar">Estándar</option>
                    <option value="Premium">Premium</option>
                </select>
                <span asp-validation-for="TipoSocio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefono" class="control-label"></label>
                <input asp-for="Telefono" class="form-control" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mail" class="control-label"></label>
                <input asp-for="Mail" class="form-control" />
                <span asp-validation-for="Mail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdLocal" class="control-label"></label>
                <select asp-for="IdLocal" class="form-control">
                    <option value="">Seleccione un local</option>
                    @foreach (var local in ViewBag.Locales as List<Local>)
                    {
                        <option value="@local.IdLocal">@local.Nombre</option>
                    }
                </select>
                <span asp-validation-for="IdLocal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
